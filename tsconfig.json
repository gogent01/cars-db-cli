{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "rootDir": "./",
    "target": "es2016",
    "lib": [
      "es2022"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "index.ts",
    "src/**/*",
    "__tests__"
  ]
}
